{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "lib": ["esnext"],
    "types": ["node"],
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.*"]
}

